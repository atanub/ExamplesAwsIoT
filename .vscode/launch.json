        {
            "type": "node",
            "runtimeVersion": "6.10.3",
            "request": "launch",
            "name": "mqtt-client-local",
            "program": "${workspaceFolder}/MqttClient.js",
            "env": {
                "AWS_IOT_HOST": "127.0.0.1",
                "AWS_IOT_REGION": "us-east-1",
